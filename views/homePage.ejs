<% include partials/header %>
  <% if(message.length > 0){%>
    <div id="alertDialog" class="alert alert-success register-success">
      <span>
        <p role="alert"><%=message%></p>
        <p onclick="hideAlert()" class="close-alert">X</p>
      </span>          
    </div>
  <% }%>
  <div class="landing">
    <img src="images/landing.png" alt="A background image showing african map">
  </div>
  <div class="form-cover">
    <div class="form">
      <form action="/sms/send" method="post">
        <div class="form-group">
          <label for="message">Message</label>
          <textarea name="message" id="message" cols="20" rows="10" placeholder="e.g Please let's meet by 10am" class="form-control" required></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-outline-success">Send message</button>
        </div>
      </form>
      <form action="/call" method="post">
        <button type="submit">Make call</button>
      </form>
  </div>
<% include partials/footer %>